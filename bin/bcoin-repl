#!/usr/bin/env node

'use strict';

const repl = require('repl');
const lib = require('..');
const helpers = require('../lib/helpers');

const r = repl.start('bcoin > ');
const define = helpers.defineContext(r.context);

Object.keys(lib).forEach((name) => {
  define(name, lib[name]);
});

define('bcoin', lib);
